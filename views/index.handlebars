<div class="container d-flex flex-column align-items-center">
<img class="mt-3" src="/assets/image/burger.jpg" alt="Nice Burger" width="150px">

<h1>The Burger App</h1>

<div class="burger-display">
    
    <ol class="waiting">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger devoured=false}}
        {{/unless}}
        {{/each}}
    </ol>
    
    <ol class="devoured">
       {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger devoured=true}}
        {{/if}}
        {{/each}}

    </ol>
</div>
<form class="container d-flex flex-column align-items-center">
<textarea type="text" id="userBurger" name="burger" placeholder="type your burger here"></textarea>
<button class="btn btn-primary mt-2" id="submitButton" type="submit"><strong>Submit</strong></button>
</form>
</div>
